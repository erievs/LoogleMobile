<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             x:Class="LooglePlusMobile.MainPage"
             BackgroundColor="#e5e5e5">

    <Grid Padding="10">
        <!-- ScrollView to hold the posts -->
        <ScrollView Scrolled="OnScrollViewScrolled">
            <StackLayout x:Name="PostsStackLayout">
                <Label Text="Loading posts..." x:Name="LoadingLabel" IsVisible="False" />
            </StackLayout>
        </ScrollView>
    </Grid>
</ContentPage>
